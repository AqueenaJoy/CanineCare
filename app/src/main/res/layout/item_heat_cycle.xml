<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPredictionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Heat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvPredictionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45.2 days"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvEstimatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Est. Date: 15 Mar 2024"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvFertilityStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal Cycle"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recorded: 01 Jan 2024"
            android:textSize="12sp"
            android:textColor="#999999"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
